{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": ".",
		"module": "ES2020",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": false,
		"moduleDetection": "legacy",
		"allowJs": true,
		"paths": {
			"@src/*": ["./src/*"]
		}
	},
	"include": ["src"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}
